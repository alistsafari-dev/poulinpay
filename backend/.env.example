# Django core
DJANGO_SECRET_KEY=change-me-in-production
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=poulinpay.ir,www.poulinpay.ir,185.208.175.200

# CORS / CSRF (set your exact https origins in production)
CORS_ALLOWED_ORIGINS=https://poulinpay.ir,https://www.poulinpay.ir
CSRF_TRUSTED_ORIGINS=https://poulinpay.ir,https://www.poulinpay.ir

# PostgreSQL (enable by setting POSTGRES_DB)
USE_POSTGRES=True
POSTGRES_DB=paylinker
POSTGRES_USER=paylinker_user
POSTGRES_PASSWORD=strong_password_here
# Docker: use db | Non-Docker VPS: use 127.0.0.1
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_SSLMODE=prefer
POSTGRES_CONN_MAX_AGE=60

# Security
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
