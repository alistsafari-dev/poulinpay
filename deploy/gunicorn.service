[Unit]
Description=Gunicorn daemon for Paylinker Django app
After=network.target

[Service]
User=YOUR_LINUX_USER
Group=www-data
WorkingDirectory=/home/YOUR_LINUX_USER/paylinker/backend
EnvironmentFile=/home/YOUR_LINUX_USER/paylinker/backend/.env
ExecStart=/home/YOUR_LINUX_USER/paylinker/venv/bin/gunicorn config.wsgi:application --workers 3 --bind 127.0.0.1:8001 --timeout 120
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
