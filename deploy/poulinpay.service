[Unit]
Description=Gunicorn daemon for PoulinPay Django app
After=network.target

[Service]
User=alireza
Group=www-data
WorkingDirectory=/home/alireza/poulin/poulinpaycom/backend
EnvironmentFile=/home/alireza/poulin/poulinpaycom/backend/.env
ExecStart=/home/alireza/poulin/poulinpaycom/venv/bin/gunicorn config.wsgi:application --workers 3 --bind 127.0.0.1:8001 --timeout 120
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
